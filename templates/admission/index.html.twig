{% extends 'base.html.twig' %}

{% block title %}Admission{% endblock %}

{% block body %}
<section class="container">
    {% for patient in patients %}
        <div class="w-25 fw-bold m-4">
            {{patient.matricule}}
            <a href="{{path("add_admission",{'matricule': patient.matricule})}}" class="btn btn-primary m-5">Queue</a>
            <a href="{{path("rm_admission",{'matricule': patient.matricule})}}" class="btn btn-danger m-5"> rmQueue</a>
        </div>
        
    {% endfor %}
</section>
{% endblock %}
